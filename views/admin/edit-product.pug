extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
block content
    main
        form.product-form(action="/admin" + (editing ? "/edit-product" : "/add-product"), method="POST")
            input(type="hidden", value=csrfToken, name="_csrf")
            div.form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value=(editing ? product.title : ""))
            div.form-control
                label(for="title") Image URL
                input(type="text", name="imageUrl", id="imageUrl", value=(editing ? product.imageUrl : ""))
            div.form-control
                label(for="title") Price
                input(type="number", name="price", id="price", value=(editing ? product.price : ""))
            div.form-control
                label(for="title") Description
                textarea(name="description", id="description", rows=5) #{editing ? product.description : ""}
            if editing
                input(type="hidden" value=product._id name="productId")

            button.btn(type="submit") #{editing ? "Update Product" : "Add product"}
